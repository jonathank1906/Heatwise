<UserControl
    x:Class="Sem2Proj.Views.PresetSelectionView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Sem2Proj.ViewModels"
    x:DataType="vm:AssetManagerViewModel">

    <Design.DataContext>
        <vm:AssetManagerViewModel />
    </Design.DataContext>

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="20">
                   <TextBlock
                    
                    HorizontalAlignment="Center"
                  
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    IsVisible="{Binding !IsConfiguring}"
                    Text="Preset Explorer" />
        <ItemsControl ItemsSource="{Binding AvailablePresets}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Width="200"
                        Height="60"
                        Background="#0078d7"
                        Command="{Binding NavigateToPresetCommand}"
                        CommandParameter="{Binding Name}"
                        CornerRadius="10">
                        <TextBlock
                            FontSize="18"
                            Foreground="White"
                            Text="{Binding Name}" />
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
