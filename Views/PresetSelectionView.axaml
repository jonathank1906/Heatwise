<UserControl
    x:Class="Heatwise.Views.PresetSelectionView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Heatwise.Converters"
    xmlns:vm="using:Heatwise.ViewModels"
    x:DataType="vm:AssetManagerViewModel">

    <Design.DataContext>
        <vm:AssetManagerViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Button.close">
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="Template">
                <!--  Ignore the Theme Template  -->
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border>
                            <Border.Background>
                                <!--  Adding a transparent background seems to make the 'hitbox' larger  -->
                                <SolidColorBrush Opacity="0" Color="White" />
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Button on hover  -->
        <Style Selector="Button.close:pointerover">
            <Setter Property="Opacity" Value="1" />
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Header  -->
            <RowDefinition Height="Auto" />
            <!--  Presets list  -->
            <RowDefinition Height="Auto" />
            <!--  Toggle Switch  -->
            <RowDefinition Height="*" />
            <!--  Spacer  -->
            <RowDefinition Height="Auto" />
            <!--  Heating Grid (only appears when toggled)  -->
        </Grid.RowDefinitions>

        <!--  Presets List  -->
        <ItemsControl
            Grid.Row="1"
            Margin="10,0,0,20"
            ItemsSource="{Binding AvailablePresets}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Preset Name or Editable TextBox  -->
                        <Grid Grid.Column="0">
                            <Button
                                x:Name="PresetNameTextBlock"
                                Width="200"
                                Height="60"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                Background="#0078d7"
                                Command="{Binding NavigateToPresetCommand}"
                                CommandParameter="{Binding Name}"
                                CornerRadius="10"
                                IsVisible="{Binding IsRenaming, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                <TextBlock
                                    FontSize="18"
                                    Foreground="White"
                                    Text="{Binding Name}" />
                            </Button>
                            <TextBox
                                x:Name="PresetNameTextBox"
                                VerticalAlignment="Center"
                                FontSize="18"
                                IsVisible="{Binding IsRenaming, Converter={StaticResource BooleanToVisibilityConverter}}"
                                KeyDown="OnRenameKeyDown"
                                LostFocus="OnRenameLostFocus"
                                Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <!--  Three-Dots Button  -->
                        <Button
                            Grid.Column="1"
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Classes="close">
                            <Button.Flyout>
                                <Flyout Placement="Bottom">
                                    <StackPanel>
                                        <!--  Rename Option  -->
                                        <Button Command="{Binding StartRenamingCommand}" CommandParameter="{Binding}">
                                            <TextBlock Foreground="White" Text="Rename" />
                                        </Button>

                                        <!--  Delete Option  -->
                                        <Button Command="{Binding DeletePresetCommand}" CommandParameter="{Binding}">
                                            <TextBlock Foreground="Red" Text="Delete" />
                                        </Button>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                            <Path
                                Width="20"
                                Height="20"
                                Data="{StaticResource ThreeDotsIcon}"
                                Fill="{DynamicResource TextColor}"
                                Stretch="Uniform" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Row="4" Margin="10,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="550" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    ClipToBounds="True"
                    CornerRadius="15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Color="Black" />
                    </Border.Effect>
                    <Image
                        Width="580"
                        Height="400"
                        Source="{Binding GridImageFromBinding}"
                        Stretch="UniformToFill" />
                </Border>

                <Border
                    Grid.Column="2"
                    Background="{DynamicResource SecondaryBackground}"
                    CornerRadius="15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Color="Black" />
                    </Border.Effect>
                    <Grid>
                        <PathIcon
                            Width="50"
                            Height="50"
                            Margin="0,10,10,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Data="{StaticResource DistrictHeating}"
                            Foreground="{DynamicResource TextColor}" />

                        <StackPanel Margin="15">
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="{DynamicResource TextColor}"
                                Text="Grid Specifications" />

                            <StackPanel Margin="0,30,0,0">
                                <StackPanel Margin="0,5">
                                    <TextBlock
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Foreground="#BFBFBF"
                                        Text="Architecture" />
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="{DynamicResource TextColor}"
                                        Text="{Binding GridInfo.Architecture}" />
                                </StackPanel>

                                <StackPanel Margin="0,5">
                                    <TextBlock
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Foreground="#BFBFBF"
                                        Text="Size" />
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="{DynamicResource TextColor}"
                                        Text="{Binding GridInfo.Size}" />
                                </StackPanel>

                                <StackPanel Margin="0,5">
                                    <TextBlock
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Foreground="#BFBFBF"
                                        Text="Name" />
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="{DynamicResource TextColor}"
                                        Text="{Binding GridInfo.Name}" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
