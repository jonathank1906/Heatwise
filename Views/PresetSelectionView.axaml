<UserControl
    x:Class="Sem2Proj.Views.PresetSelectionView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Sem2Proj.ViewModels"
    x:DataType="vm:AssetManagerViewModel">

    <Design.DataContext>
        <vm:AssetManagerViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="Auto" /> <!-- Presets list -->
            <RowDefinition Height="Auto" /> <!-- Toggle Switch -->
            <RowDefinition Height="*" />    <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- Heating Grid (only appears when toggled) -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock
            Grid.Row="0"
            Margin="10,0,0,20"
            HorizontalAlignment="Left"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            Text="Preset Explorer" />

        <!-- Presets List -->
        <ItemsControl
            Grid.Row="1"
            Margin="10,0,0,20"
            ItemsSource="{Binding AvailablePresets}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Width="200"
                        Height="60"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        Background="#0078d7"
                        Command="{Binding NavigateToPresetCommand}"
                        CommandParameter="{Binding Name}"
                        CornerRadius="10">
                        <TextBlock
                            FontSize="18"
                            Foreground="White"
                            Text="{Binding Name}" />
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Fixed Position ToggleSwitch (left-aligned with buttons) -->
        <ToggleSwitch
            Grid.Row="2"
           
            Margin="10,0,0,20"
            HorizontalAlignment="Left"
            IsChecked="{Binding IsHeatingGridVisible, Mode=TwoWay}">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Text="View Heating Grid" />
        </ToggleSwitch>

        <!-- Heating Grid Info - appears below but doesn't affect toggle position -->
        <StackPanel 
            Grid.Row="4"
            IsVisible="{Binding IsHeatingGridVisible}"
            Margin="10,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="550" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <!-- Heating Grid Image -->
                <Border
                    Grid.Column="0"
                    CornerRadius="15"
                    ClipToBounds="True">
                    <Image
                        Width="550"
                        Height="400"
                        Source="{Binding GridImageFromBinding}"
                        Stretch="UniformToFill" />
                </Border>

                <!-- Heating Grid Info -->
                <Border
                    Grid.Column="2"
                    Background="#252526"
                    CornerRadius="15">
                    <StackPanel Margin="15">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Grid Specifications" />

                        <StackPanel Margin="0,5">
                            <TextBlock
                                FontSize="14"
                                Foreground="#BFBFBF"
                                Text="Architecture" />
                            <TextBlock
                                FontSize="16"
                                Foreground="White"
                                Text="{Binding GridInfo.Architecture}" />
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock
                                FontSize="14"
                                Foreground="#BFBFBF"
                                Text="Size" />
                            <TextBlock
                                FontSize="16"
                                Foreground="White"
                                Text="{Binding GridInfo.Size}" />
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock
                                FontSize="14"
                                Foreground="#BFBFBF"
                                Text="Name" />
                            <TextBlock
                                FontSize="16"
                                Foreground="White"
                                Text="{Binding GridInfo.Name}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>