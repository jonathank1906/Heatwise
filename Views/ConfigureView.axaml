<UserControl
    x:Class="Sem2Proj.Views.ConfigureView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Sem2Proj.ViewModels"
    x:DataType="vm:AssetManagerViewModel"
    mc:Ignorable="d">

    <ItemsControl ItemsSource="{Binding AllAssets}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border
                    Margin="0,0,0,30"
                    Padding="20"
                    Background="#252526"
                    CornerRadius="15">
                    <Grid ColumnDefinitions="Auto,20,*" Width="800">
                        <!-- Machine Image -->
                        <Grid Grid.Column="0" HorizontalAlignment="Center">
                            <Border
                                Width="300"
                                Height="200"
                                Background="Transparent"
                                CornerRadius="10">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" Color="Black" />
                                </Border.Effect>
                            </Border>
                            <Border
                                Width="350"
                                Height="250"
                                ClipToBounds="True"
                                CornerRadius="10">
                                <Border.Clip>
                                    <RectangleGeometry
                                        RadiusX="10"
                                        RadiusY="10"
                                        Rect="0,0,350,250" />
                                </Border.Clip>
                                <Image Source="{Binding ImageFromBinding}" Stretch="UniformToFill" />
                            </Border>
                        </Grid>

                        <!-- Machine Details -->
                        <StackPanel Grid.Column="2">
                            <TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Name}" />

                            <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                                <!-- Max Heat -->
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,6,6,0"
                                    Foreground="White"
                                    Text="Max Heat" />
                                <Border
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Background="#BFBFBF"
                                    Padding="5,2"
                                    Margin="40,6,0,6"
                                    Height="24"
                                    Width="45"
                                    CornerRadius="5">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        TextAlignment="Center"
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="{Binding MaxHeat, StringFormat={}{0:F1}}" />
                                </Border>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="10,6,0,6"
                                    Foreground="White"
                                    Text="MW" />
                                    
                                <!--  Production Costs  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,6,6,0"
                                            HorizontalAlignment="Left"
                                            Foreground="White"
                                            Text="Production Costs" />
                                        <Border
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            Classes="value-box">
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="Black"
                                                Text="{Binding ProductionCosts, StringFormat={}{0:F1}}" />
                                        </Border>
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Classes="unit-text"
                                            Text="DKK / MWh(th)" />

                                        <!--  CO₂ Emissions  -->
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,6,6,0"
                                            HorizontalAlignment="Left"
                                            Foreground="White"
                                            Text="CO₂ Emissions" />
                                        <Border
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            Classes="value-box">
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="Black"
                                                Text="{Binding Emissions, StringFormat={}{0:F1}}" />
                                        </Border>
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Classes="unit-text"
                                            Text="kg / MWh(th)" />

                                        <!--  Gas Consumption  -->
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Margin="0,6,6,0"
                                            HorizontalAlignment="Left"
                                            Foreground="White"
                                            Text="Gas Consumption" />
                                        <Border
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            Classes="value-box">
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="Black"
                                                Text="{Binding GasConsumption, StringFormat={}{0:F1}}" />
                                        </Border>
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="2"
                                            Classes="unit-text"
                                            Text="MWh(gas) / MWh(th)" />

                                        <!--  Oil Consumption  -->
                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Margin="0,6,6,0"
                                            HorizontalAlignment="Left"
                                            Foreground="White"
                                            Text="Oil Consumption" />
                                        <Border
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            Classes="value-box">
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="Black"
                                                Text="{Binding OilConsumption, StringFormat={}{0:F1}}" />
                                        </Border>
                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="2"
                                            Classes="unit-text"
                                            Text="MWh(oil) / MWh(th)" />

                                        <!--  Max Electricity  -->
                                        <TextBlock
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            Margin="0,6,6,0"
                                            HorizontalAlignment="Left"
                                            Foreground="White"
                                            Text="Max Electricity" />
                                        <Border
                                            Grid.Row="5"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            Classes="value-box">
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="Black"
                                                Text="{Binding MaxElectricity, StringFormat={}{0:F1}}" />
                                        </Border>
                                        <TextBlock
                                            Grid.Row="5"
                                            Grid.Column="2"
                                            Classes="unit-text"
                                            Text="MW" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>