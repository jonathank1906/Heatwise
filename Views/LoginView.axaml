<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Sem2Proj.ViewModels"
    x:Class="Sem2Proj.Views.LoginView"
    x:DataType="vm:LoginViewModel"
    Width="800"
    Height="500"
    WindowStartupLocation="CenterScreen"
    CanResize="False"
    Background="#1E1E1E"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="10" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15">
                <Image Source="/Assets/map.png" Width="180"/>

                <TextBlock 
                    FontSize="14"
                    Foreground="Black"
                    HorizontalAlignment="Center">
                    Engineering <Run Text="Tomorrow" FontWeight="Bold"/>
                </TextBlock>

                <!-- Username -->
                <TextBox
                    Watermark="Username"
                    Text="{Binding Username}"
                    Width="200"
                    Background="#D9D9D9"
                    BorderThickness="0"
                    CornerRadius="5"
                    Padding="10"
                    FontSize="14"
                    HorizontalAlignment="Center" />

                <!-- Password -->
                <TextBox
                    Watermark="Password"
                    Text="{Binding Password}"
                    Width="200"
                    Background="#D9D9D9"
                    BorderThickness="0"
                    CornerRadius="5"
                    Padding="10"
                    FontSize="14"
                    HorizontalAlignment="Center"
                    PasswordChar="*" />

                <!-- Login Button -->
                <Button
                    Content="Login"
                    Command="{Binding AttemptLoginCommand}"
                    Width="200"
                    Height="40"
                    Background="#D32F2F"
                    Foreground="White"
                    CornerRadius="5"
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Right Panel -->
        <Grid Grid.Column="1">
            <Image Source="/Assets/map.png"
                   Stretch="UniformToFill"
                   Opacity="0.95" />

            <Border
                Background="#99000000"
                Margin="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Padding="20"
                CornerRadius="10">
                <StackPanel>
                    <TextBlock
                        Text="In the heart of every warm home is the silent echo of your dedication and hard work."
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        TextWrapping="Wrap"
                        Width="300"/>

                    <TextBlock
                        Text="â€“ ChatGPT to Danfoss Employee"
                        Foreground="LightGray"
                        FontSize="12"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
