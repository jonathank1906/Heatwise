<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Sem2Proj.Views.TooltipWindow"
        Width="300"
        Height="300"
        SizeToContent="Height"
        WindowStartupLocation="Manual"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="None"
        CanResize="False"
        Topmost="True">
        
    <Grid>
        <!-- Transparent background with reduced opacity -->
        <Border CornerRadius="5" Background="#1e1e1e" BorderBrush="#444" BorderThickness="1" Opacity="0.8"/>

        <!-- Content area with full opacity -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/> <!-- Title bar area -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title bar with drag area and close button -->
            <Grid Grid.Row="0" Background="Transparent" PointerPressed="WindowDragMove">
                <TextBlock Text="Optimization Details" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Foreground="White"/>
                
                <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Button Canvas.Right="0"
                            Width="46"  
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="CloseWindow"
                            Padding="10,0,10,0">  
                        <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                Foreground="White"
                                Width="12" Height="12"/>
                    </Button>
                </Canvas>
            </Grid>

            <!-- Content area -->
            <TextBlock x:Name="TooltipText" 
                      Grid.Row="1"
                      Margin="10"
                      Foreground="White"
                      TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</Window>