<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Sem2Proj.Views.SettingsWindow"
        Width="350"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="Gray"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="BorderOnly"
        CanResize="False">

    <Grid>
        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/> <!-- Title bar area -->
                <RowDefinition Height="*"/>  
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="Transparent"
                  PointerPressed="WindowDragMove">
                <!-- Close Button -->
                <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Button Canvas.Right="0"
                            Width="46"  
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="CloseWindow"
                            Padding="10,0,10,0">  
                        <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                Foreground="White"
                                Width="12" Height="12"/>
                    </Button>
                </Canvas>
            </Grid>

            <!-- Middle Content -->
            <StackPanel Grid.Row="1" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Spacing="20">
            </StackPanel>
        </Grid>
    </Grid>
</Window>