<UserControl
    x:Class="Sem2Proj.Views.SettingsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Sem2Proj.ViewModels"
    Width="450"
    Height="700"
    x:DataType="vm:SettingsViewModel">

    <!--  Main Content  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title bar area  -->
        <Grid Grid.Row="0" Background="Transparent">
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="Settings" />

            <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button
                    Canvas.Right="0"
                    Width="46"
                    Height="30"
                    Padding="10,0,10,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding CloseCommand}">
                    <PathIcon
                        Width="15"
                        Height="15"
                        Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                        Foreground="White" />
                </Button>
            </Canvas>
        </Grid>

        <!--  Main area  -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <DockPanel LastChildFill="True">
                <TextBlock
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Dark/Light Mode" />
                <ToggleSwitch Margin="0,0,0,1" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </DockPanel>
            <Border
                Margin="0,20,0,20"
                Background="White"
                BorderThickness="0.01"
                Opacity="0.2" />


            <DockPanel LastChildFill="True">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Show Home Screen on Startup" />
                <ToggleSwitch Margin="0,0,0,1" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </DockPanel>
            <Border
                Margin="0,20,0,20"
                Background="White"
                BorderThickness="0.01"
                Opacity="0.2" />


            <DockPanel LastChildFill="True">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Developer Mode" />
                <ToggleSwitch Margin="0,0,0,1" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </DockPanel>
            <TextBlock
                Margin="0,0,0,0"
                VerticalAlignment="Center"
                FontSize="12"
                Foreground="#BBFFFFFF"
                Text="Disables loading, login and home screens on startup" />
            <Border
                Margin="0,20,0,20"
                Background="White"
                BorderThickness="0.01"
                Opacity="0.2" />
        </StackPanel>

        <Button
            Grid.Row="4"
            Width="450"
            Height="40"
            Padding="10,10,10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Restore Defaults"
            FontWeight="Bold" />
    </Grid>
</UserControl>
