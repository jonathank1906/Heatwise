<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Sem2Proj.Views.SplashWindow"

        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        Background="Transparent"
        Title="SplashScreen">
    <Border CornerRadius="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Color="#E22D2A" Offset="0.0"/>
            <GradientStop Color="#95221E" Offset="1.0"/>
        </LinearGradientBrush>
        </Border.Background>
        <Border.Styles>
            <Style Selector="Image.gear-clockwise">
                <Style.Animations>
                    <Animation Duration="0:0:2" IterationCount="INFINITE">
                        <KeyFrame Cue="0%">
                            <Setter Property="RotateTransform.Angle" Value="0.0"/>
                        </KeyFrame>
                        <KeyFrame Cue="100%">
                            <Setter Property="RotateTransform.Angle" Value="360.0"/>
                        </KeyFrame>
                    </Animation>
                </Style.Animations>
            </Style>
            <Style Selector="Image.gear-counterclockwise">
                <Style.Animations>
                    <Animation Duration="0:0:2" IterationCount="INFINITE">
                        <KeyFrame Cue="0%">
                            <Setter Property="RotateTransform.Angle" Value="0.0"/>
                        </KeyFrame>
                        <KeyFrame Cue="100%">
                            <Setter Property="RotateTransform.Angle" Value="-360.0"/>
                        </KeyFrame>
                    </Animation>
                </Style.Animations>
            </Style>
        </Border.Styles>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Center Gear -->
                <Image x:Name="CenterGear" Classes="gear-counterclockwise" Source="{SvgImage Assets/Gear.svg}" Width="180" Height="180"  Canvas.Left="140" >
                </Image>
                <!-- Second Gear -->
                <Image x:Name="SecondGear" Classes="gear-clockwise" Source="{SvgImage Assets/Gear.svg}" Width="180" Height="180"  Canvas.Top="40" Canvas.Left="-30">
                </Image>
                <ProgressBar x:Name="progressBar" Value="0" Maximum="100" Width="300" Height="20" Canvas.Top="300" IsIndeterminate="True"/>
            </Canvas>
        </Grid>
    </Border>
</Window>