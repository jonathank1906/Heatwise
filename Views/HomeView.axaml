<UserControl
    x:Class="Sem2Proj.Views.HomeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Sem2Proj.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

   <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>  
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top -->
        <DockPanel Grid.Row="0" Background="#AB2323">
            <TextBlock 
                Text="DanBOSS or Maybe Logo?"
                FontSize="20"  
                Foreground="White" 
                FontWeight="Bold"
                VerticalAlignment="Center"
                Margin="10,0,0,0"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button
                    Content="About" 
                    Margin="5"/>
                <Button 
                    Content="Group" 
                    Margin="5"/>
            </StackPanel>
        </DockPanel>

        <!-- Mid-->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock 
                Text="Welcome to Heatington" 
                FontSize="28" FontWeight="Bold" 
                HorizontalAlignment="Center"/>
            <TextBlock 
                Text="Maybe some Description!" 
                FontSize="18" 
                HorizontalAlignment="Center" 
                Margin="0,10"/>
            <Button 
                Content="Go to MainWindow" 
                Background="#AB2323" 
                Foreground="White" 
                Padding="10,5" 
                Margin="0,20"
                HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Bottom -->
        <DockPanel Grid.Row="2" Background="#AB2323">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="2025 2nd Semester Project" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBlock Text="Group 21" Foreground="White" Margin="5"/>
                <TextBlock Text="Another text?" Foreground="White" Margin="5"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
