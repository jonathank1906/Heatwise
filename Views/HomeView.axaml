<Window
    x:Class="Sem2Proj.Views.HomeWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="900"
    Height="500"
    CanResize="False"
    ExtendClientAreaToDecorationsHint="True"
    SystemDecorations="BorderOnly"
    WindowStartupLocation="CenterOwner">

    <Grid>
        <Image Source="/Assets/background.jpg" Stretch="UniformToFill" />

        <!--  Main Content  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Background="Transparent"
                PointerPressed="WindowDragMove">
                <!--  Close Button  -->
                <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Button
                        Canvas.Right="0"
                        Width="46"
                        Height="30"
                        Padding="10,0,10,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="CloseWindow">
                        <PathIcon
                            Width="12"
                            Height="12"
                            Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                            Foreground="White" />
                    </Button>
                </Canvas>
            </Grid>

            <!--  Middle Content  -->
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20">

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Welcome to Heatington" />


                <Border
                    Width="450"
                    Height="300"
                    HorizontalAlignment="Center"
                    CornerRadius="15">
                    <Border.Clip>
                        <RectangleGeometry
                            RadiusX="15"
                            RadiusY="15"
                            Rect="0,0,450,300" />
                    </Border.Clip>
                    <Image
                        Width="450"
                        Height="300"
                        Source="/Assets/map.png"
                        Stretch="UniformToFill" />
                </Border>
            </StackPanel>

            <!--  Bottom Footer  -->
            <DockPanel Grid.Row="2" Background="#AB2323">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="2025 2nd Semester Project" />
                    <TextBlock
                        Margin="5"
                        Foreground="White"
                        Text="Group 21" />
                </StackPanel>
            </DockPanel>
        </Grid>
    </Grid>
</Window>