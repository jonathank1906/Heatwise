<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="Sem2Proj.Views.AssetManagerView"
    xmlns:vm="using:Sem2Proj.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--<StackPanel>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,350,0,0"
            FontSize="24"
            FontWeight="Bold"
            Text="Welcome to the Asset Manager Page!" />
    </StackPanel>-->    

    <Grid ColumnDefinitions="*,2*" Margin="10">
            <!--Left Side-->
        <Grid Grid.Column="0" Background="LightGray" RowDefinitions="*,*,*,*,*">
                <!--<Button Background="Black" Margin="0,10,0,10" HorizontalAlignment="Stretch">Gas Boiler 1</Button>
                <Button Background="Black" Margin="0,10,0,10" HorizontalAlignment="Stretch">Gas Boiler 2</Button>
                <Button Background="Black" Margin="0,10,0,10" HorizontalAlignment="Stretch">Oil Boiler 1</Button>
                <Button Background="Black" Margin="0,10,0,10" HorizontalAlignment="Stretch">Gas Motor 1</Button>
                <Button Background="Black" Margin="0,10,0,10" HorizontalAlignment="Stretch">Heat Pump 1</Button>-->

            <ToggleButton Grid.Row="0" Content="ToggleButton" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch"> Gas Boiler 1
                <ToggleButton.Styles>
                    <Style Selector="ToggleButton">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="ToggleButton:checked">
                        <Setter Property="Background" Value="Red"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ToggleButton.Styles>
            </ToggleButton>

            <ToggleButton Grid.Row="1" Content="ToggleButton" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch"> Gas Boiler 2
                <ToggleButton.Styles>
                    <Style Selector="ToggleButton">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="ToggleButton:checked">
                        <Setter Property="Background" Value="Red"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ToggleButton.Styles>
            </ToggleButton>

            <ToggleButton Grid.Row="2" Content="ToggleButton" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch"> Oil Boiler 1
                <ToggleButton.Styles>
                    <Style Selector="ToggleButton">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="ToggleButton:checked">
                        <Setter Property="Background" Value="Red"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ToggleButton.Styles>
            </ToggleButton>

            <ToggleButton Grid.Row="3" Content="ToggleButton" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch"> Gas Motor 1
                <ToggleButton.Styles>
                    <Style Selector="ToggleButton">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="ToggleButton:checked">
                        <Setter Property="Background" Value="Red"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ToggleButton.Styles>
            </ToggleButton>

            <ToggleButton Grid.Row="4" Content="ToggleButton" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch"> Heat Pump 1
                <ToggleButton.Styles>
                    <Style Selector="ToggleButton">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="ToggleButton:checked">
                        <Setter Property="Background" Value="Red"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ToggleButton.Styles>
            </ToggleButton>
        </Grid>

            <!--Right Side-->
        <Grid Grid.Column="1" Background="Black" RowDefinitions="*,*,*,*,*,*,*,*,*,5*">
            <TextBlock Grid.Row="0" Text="Scenario 1" Foreground="White" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            
            <TextBlock Grid.Row="1" Text="Max Heat" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
            <ProgressBar Grid.Row="2" Minimum="0" Maximum="100" Value="60" Margin="20,5,20,5" HorizontalAlignment="Stretch"/>
            <!--Slider Grid.Row="2" Minimum="0" Maximum="100" Value="0" Margin="10" HorizontalAlignment="Stretch" TickFrequency="1"/-->

            <TextBlock Grid.Row="3" Text="Production Costs" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
            <ProgressBar Grid.Row="4" Minimum="0" Maximum="100" Value="60" Margin="20,5,20,5" HorizontalAlignment="Stretch"/>

            <TextBlock Grid.Row="5" Text="CO2 Emissions" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
            <ProgressBar Grid.Row="6" Minimum="0" Maximum="100" Value="60" Margin="20,5,20,5" HorizontalAlignment="Stretch"/>
            <!--Slider Grid.Row="4" Minimum="0" Maximum="100" Value="0" Margin="10" HorizontalAlignment="Stretch" TickFrequency="1"/-->
            
            <TextBlock Grid.Row="7" Text="Gas Consumption" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
            <ProgressBar Grid.Row="8" Minimum="0" Maximum="100" Value="60" Margin="20,5,20,5" HorizontalAlignment="Stretch"/>
            <!--Slider Grid.Row="6" Minimum="0" Maximum="100" Value="0" Margin="10" HorizontalAlignment="Stretch" TickFrequency="1"/-->

            <Image Grid.Row="9" Source="avares://Sem2Proj/Assets/GB1.png" Stretch="Uniform" Margin="10">
            </Image>
        </Grid>
    </Grid>

</UserControl>
