<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="Sem2Proj.Views.AssetManagerView"
    xmlns:vm="using:Sem2Proj.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:DataType="vm:AssetManagerViewModel">

    <Grid>
        <!-- Presets SplitView (left-most) -->
        <SplitView
            IsPaneOpen="True"
            DisplayMode="CompactInline"
            OpenPaneLength="180"
            CompactPaneLength="46"
            Background="#1e1e1e"
            PaneBackground="#1e1e1e"
            Margin="0,0,0,0"> <!-- Adjust margin as needed -->
            
            <SplitView.Pane>
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Spacing="1"
                            Margin="2">
                    <TextBlock Text="Saved Presets" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
                    <ListBox Margin="0 0 -100 0" Padding="0">
                        <ListBoxItem Content="Scenario 1" />
                        <ListBoxItem Content="Scenario 2" />
                    </ListBox>
                    <Button Content="Create a new Preset" Margin="5" HorizontalAlignment="Center"/>
                    <Separator Margin="5" Height="2"/>
                    
                    <!-- Hardcoded Heat Production Units -->
                    <TextBlock Text="Preset Config" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
                    <ListBox Margin="0 0 -100 0" Padding="0">
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Width="40" Height="40">
                                    <Button.Content>
                                        <Image Source="avares://Sem2Proj/Assets/Remove.png"/>
                                    </Button.Content>
                                </Button>
                                <TextBlock Text="Oil Boiler 1" Foreground="White"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Width="20" Height="20">
                                    <Button.Content>
                                        <Image Source=" ../Assets/Remove.png"/>
                                    </Button.Content>
                                </Button>
                                <TextBlock Text="Gas Motor 1" Foreground="White"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Width="20" Height="20">
                                    <Button.Content>
                                        <Image Source=" ../Assets/Remove.png"/>
                                    </Button.Content>
                                </Button>
                                <TextBlock Text="Heat Pump 1" Foreground="White"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                    <Button Content="+" Margin="5" HorizontalAlignment="Center"/>
                    <Button Content="Save" Margin="5" HorizontalAlignment="Center"/>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>

        <!-- First SplitView (middle) -->
        <SplitView
            IsPaneOpen="True"
            DisplayMode="CompactInline"
            OpenPaneLength="180"
            CompactPaneLength="46"
            Background="#1e1e1e"
            PaneBackground="#1e1e1e"
            Margin="200,0,0,0"> <!-- Adjust margin to move it to the right -->
            
            <SplitView.Pane>
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Spacing="1"
                            Margin="2">
                    <ListBox Margin="0 0 -100 0" Padding="0" ItemsSource="{Binding Items}"
                             SelectedItem="{Binding SelectedListItem}">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="12 8"></Setter>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:ListItemTemplate}">
                                <StackPanel Spacing="17" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Label}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </SplitView.Pane>
            
            <SplitView.Content>
                <Grid Background="Black" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,5*"
                      ColumnDefinitions="Auto,Auto">
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding SelectedListItem.Label}" Foreground="White" Margin="5" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Max Heat" Foreground="White" Margin="5" HorizontalAlignment="Right"/>
                    <ProgressBar Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="100" Value="60" Margin="5" Width="200" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Production Costs" Foreground="White" Margin="5" HorizontalAlignment="Right"/>
                    <ProgressBar Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="100" Value="60" Margin="5" Width="200" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="CO2 Emissions" Foreground="White" Margin="5" HorizontalAlignment="Right"/>
                    <ProgressBar Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="100" Value="60" Margin="5" Width="200" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Gas Consumption" Foreground="White" Margin="5" HorizontalAlignment="Right"/>
                    <ProgressBar Grid.Row="4" Grid.Column="1" Minimum="0" Maximum="100" Value="60" Margin="5" Width="200" HorizontalAlignment="Left"/>
                <Border Grid.Row="5" Grid.Column="1" ClipToBounds="True" CornerRadius="15">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" />
                    </Border.Effect>
                    <Image Source="{Binding ImageFromBinding}" Stretch="Uniform" Height="300" HorizontalAlignment="Center"/>
                </Border>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</UserControl>