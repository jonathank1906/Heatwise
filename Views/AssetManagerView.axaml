<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="Sem2Proj.Views.AssetManagerView"
    xmlns:vm="using:Sem2Proj.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:DataType="vm:AssetManagerViewModel">

    <Grid Background="#1e1e1e" ColumnDefinitions="200,*" RowDefinitions="Auto,*">
        <!-- Left Column: Navigation -->
        <StackPanel Grid.Row="1" Background="#AB2323" Width="200">
            <TextBlock Text="Saved Presets" Foreground="White" FontWeight="SemiBold" FontSize="18" Margin="10"/>
            <ListBox Margin="0 0 0 10" Padding="0" ItemsSource="{Binding Presets}" SelectedItem="{Binding SelectedPreset}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" FontSize="16" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Create a new Preset" Margin="10" HorizontalAlignment="Center"/>

            <Separator Margin="10" Height="2" Background="White"/>

            <TextBlock Text="All Assets" Foreground="White" FontWeight="SemiBold" FontSize="18" Margin="10"/>
          
            <ListBox Margin="0 0 0 10" Padding="0" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedListItem}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Label}" FontSize="16" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Create a new Asset" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>

    <!-- Right Column: Content -->
<Grid Grid.Row="1" Grid.Column="1" Margin="10" ColumnDefinitions="*,300" RowDefinitions="Auto,*">
    <!-- Asset Details -->
    <Grid Grid.Column="0" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,5*"
          ColumnDefinitions="Auto,Auto,Auto,Auto">
        
        <Border Grid.Row="0" Grid.ColumnSpan="2" ClipToBounds="True" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" />
            </Border.Effect>
            <Image Source="{Binding ImageFromBinding}" Stretch="Uniform" Height="300" HorizontalAlignment="Center"/>
        </Border>

        <!-- Progress Bars -->
        <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="4" Margin="10,0,0,0">
            <TextBlock Text="{Binding SelectedListItem.Label}" Foreground="White" Margin="5" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            
            <TextBlock Text="Max Heat" Foreground="White" Margin="5" HorizontalAlignment="Left"/>
            <ProgressBar Minimum="0" Maximum="100" Value="{Binding SelectedListItem.MaxHeat}" Width="200" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding SelectedListItem.MaxHeat}" Foreground="White" Margin="5" HorizontalAlignment="Left"/>

            <TextBlock Text="Production Costs" Foreground="White" Margin="5" HorizontalAlignment="Left"/>
            <ProgressBar Minimum="0" Maximum="100" Value="{Binding SelectedListItem.ProductionCosts}" Width="200" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding SelectedListItem.ProductionCosts}" Foreground="White" Margin="5" HorizontalAlignment="Left"/>

            <TextBlock Text="CO2 Emissions" Foreground="White" Margin="5" HorizontalAlignment="Left"/>
            <ProgressBar Minimum="0" Maximum="100" Value="{Binding SelectedListItem.CO2Emissions}" Width="200" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding SelectedListItem.CO2Emissions}" Foreground="White" Margin="5" HorizontalAlignment="Left"/>

            <TextBlock Text="Gas Consumption" Foreground="White" Margin="5" HorizontalAlignment="Left"/>
            <ProgressBar Minimum="0" Maximum="100" Value="{Binding SelectedListItem.GasConsumption}" Width="200" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding SelectedListItem.GasConsumption}" Foreground="White" Margin="5" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Grid>
    </Grid>
</UserControl>