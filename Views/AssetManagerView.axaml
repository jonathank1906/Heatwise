<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="Sem2Proj.Views.AssetManagerView"
    xmlns:vm="using:Sem2Proj.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:DataType="vm:AssetManagerViewModel">

    <SplitView
        IsPaneOpen="True"
        DisplayMode="CompactInline"
        OpenPaneLength="180"
        CompactPaneLength="46"
        Background="#1e1e1e"
        PaneBackground="#1e1e1e">
        
        <SplitView.Pane>
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Spacing="1"
                        Margin="2">
                <ListBox Margin="0 0 -100 0" Padding="0" ItemsSource="{Binding Items}"
                         SelectedItem="{Binding SelectedListItem}">
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="12 8"></Setter>
                        </Style>
                    </ListBox.Styles>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:ListItemTemplate}">
                            <StackPanel Spacing="17" Orientation="Horizontal">
                                <PathIcon Data="{Binding ListItemIcon}" Width="14" />
                                <TextBlock Text="{Binding Label}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </SplitView.Pane>
        
        <SplitView.Content>
            <Grid Background="Black" RowDefinitions="*,*,*,*,*,*,*,*,*,5*">
                <TextBlock Grid.Row="0" Text="Scenario 1" Foreground="White" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                
                <TextBlock Grid.Row="1" Text="Max Heat" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
                <ProgressBar Grid.Row="2" Minimum="0" Maximum="100" Value="60" Margin="20,5,20,5" HorizontalAlignment="Stretch"/>
                <!--Slider Grid.Row="2" Minimum="0" Maximum="100" Value="0" Margin="10" HorizontalAlignment="Stretch" TickFrequency="1"/-->

                <TextBlock Grid.Row="3" Text="Production Costs" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
                <ProgressBar Grid.Row="4" Minimum="0" Maximum="100" Value="60" Margin="20,5,20,5" HorizontalAlignment="Stretch"/>

                <TextBlock Grid.Row="5" Text="CO2 Emissions" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
                <ProgressBar Grid.Row="6" Minimum="0" Maximum="100" Value="60" Margin="20,5,20,5" HorizontalAlignment="Stretch"/>
                <!--Slider Grid.Row="4" Minimum="0" Maximum="100" Value="0" Margin="10" HorizontalAlignment="Stretch" TickFrequency="1"/-->
                
                <TextBlock Grid.Row="7" Text="Gas Consumption" Foreground="White" Margin="5" HorizontalAlignment="Center"/>
                <ProgressBar Grid.Row="8" Minimum="0" Maximum="100" Value="60" Margin="20,5,20,5" HorizontalAlignment="Stretch"/>
                <!--Slider Grid.Row="6" Minimum="0" Maximum="100" Value="0" Margin="10" HorizontalAlignment="Stretch" TickFrequency="1"/-->

                <Image Grid.Row="9" Source="avares://Sem2Proj/Assets/GB1.png" Stretch="Uniform" Margin="10">
                </Image>
            </Grid>
        </SplitView.Content>
    </SplitView>

</UserControl>